# Configuración del Sistema de Gestión de Anuncios Publicitarios
# Copia este archivo como .env y personaliza los valores según tu entorno

# Configuración de MongoDB
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB_NAME=proyecto_anuncios_publicitarios

# Configuración de Logging
LOG_LEVEL=INFO
LOG_FILE=logs/sistema.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=3

# Configuración de la Aplicación
APP_NAME=Sistema de Gestión de Anuncios Publicitarios
APP_VERSION=2.0.0
DEBUG=False

# Configuración específica para Flask
FLASK_SECRET_KEY=tu-clave-secreta-muy-segura-cambiar-en-produccion
FLASK_DEBUG=True
FLASK_PORT=5000
FLASK_HOST=127.0.0.1

# Configuración de Validación
MIN_EMPRESA_LENGTH=2
MAX_EMPRESA_LENGTH=100

# Configuración de Datos de Prueba
CREAR_DATOS_PRUEBA=True
